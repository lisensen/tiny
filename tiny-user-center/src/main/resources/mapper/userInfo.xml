<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tiny.usercenter.fosun.buriedpoint.dao.UserMapper">

    <insert id="insertUser" parameterType="com.tiny.models.user.UserInfo">
        insert into user_info(`phone`,`name`,`occur_at`) values (#{phone},#{name},#{occurAt})
    </insert>

    <!--    查询全部学生-->
    <select id="queryAllUsers" resultType="com.tiny.models.user.UserInfo">
        select * from user_info
    </select>

    <select id="queryUserById" resultType="com.tiny.models.user.UserInfo" parameterType="int">
        select * from user_info where id=#{id}
    </select>

</mapper>